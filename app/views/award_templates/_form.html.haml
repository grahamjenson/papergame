= form_for @award_template do |f|
  - if @award_template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@award_template.errors.count, "error")} prohibited this award_template from being saved:"
      %ul
        - @award_template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :award_id
    = f.number_field :award_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
