= form_for @identifier do |f|
  - if @identifier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@identifier.errors.count, "error")} prohibited this identifier from being saved:"
      %ul
        - @identifier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :identifier_id
    = f.text_field :identifier_id
  .field
    = f.label :type_token
    = f.text_field :type_token
  .field
    = f.label :issuer
    = f.text_field :issuer
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :display
    = f.text_field :display
  .actions
    = f.submit 'Save'
