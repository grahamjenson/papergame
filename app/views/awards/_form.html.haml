= form_for @award do |f|
  - if @award.errors.any?
    #error_explanation
      %h2= "#{pluralize(@award.errors.count, "error")} prohibited this award from being saved:"
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :complete
    = f.text_field :complete
  .field
    = f.label :retailer_id
    = f.number_field :retailer_id
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
